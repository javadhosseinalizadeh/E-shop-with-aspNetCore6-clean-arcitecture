@model IEnumerable<CategoryViewModel>


<div class="d-flex justify-content-between">
    <h1>دسته بندی ها</h1>
    <div class="d-inline-flex">
        @*<form asp-controller="Category" asp-action="Search" method="get" class="align-self-md-center mx-2">
            <input type="text" name="q" autocomplete="off" />
            <button type="submit" class="btn btn-secondary">جستجو</button>
        </form>*@
        <a class='btn btn-success align-self-md-center' asp-controller="Category" asp-action="Create" asp-area="Admin">ایجاد</a>
    </div>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
           
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
                <tr>
                    <td scope="row">
                    @item.Id
                    </td>
                    <td>
                    @item.Title
                    </td>                  
                    <td>
                        <a class="btn btn-secondary" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">ویرایش</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
        }
    </tbody>
    <a class="btn btn-secondary" asp-action="Create" asp-controller="Category">اضافه کردن</a>
</table>