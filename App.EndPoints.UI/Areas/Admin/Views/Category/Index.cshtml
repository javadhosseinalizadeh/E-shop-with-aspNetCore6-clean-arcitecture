@model IEnumerable<CategoryViewModel>



<main id="main" class="main">

    <div class="pagetitle">
        <h1>لیست خدمات</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">خانه</a></li>
                <li class="breadcrumb-item active">خدمات</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">جدول داده‌ها</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable text-right">
                            <thead>
                                <tr>
                                    <th scope="col"> @Html.DisplayNameFor(model => model.Id) </th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>

                                    <th scope="col">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.Title</td>

                                        <td>
                                            <a class="btn btn-secondary" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">ویرایش</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
