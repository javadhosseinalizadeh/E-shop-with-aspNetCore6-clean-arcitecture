@model App.EndPoints.UI.Areas.Admin.Models.ViewModels.UserManagmentVM
@{
	ViewData["Title"] = "ویرایش اطلاعات کاربر";
}

<div class="m-5 p-5">
	<form asp-action="Update" method="post" asp-area="Admin">
		<h4>ویرایش اطلاعات @Model.Name</h4>
		<hr />
		
		<div class="form-group">
			<input asp-for="Id" class="form-control" value="@Model.Id" hidden="true"/>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control"/>

		</div>
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>

		</div>
		<div class="form-group">
			<label asp-for="PhoneNumber"></label>
			<input asp-for="PhoneNumber" class="form-control"/>

		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input asp-for="Password" class="form-control" placeholder="رمز قبلی"/>
		</div>
		<div class="form-group" typeof="hidden">
			<label asp-for="SecurityStamp" ></label>
			<input asp-for="Password" class="form-control" placeholder="رمز قبلی"/>
		</div>

		<input type="submit" class="btn btn-primary" value="ثبت نام"/>
	</form>
</div>