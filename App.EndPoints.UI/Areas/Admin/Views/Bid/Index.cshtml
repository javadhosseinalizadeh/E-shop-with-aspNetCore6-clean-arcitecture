@model IEnumerable<BidViewModel>

@{
    ViewData["Title"] = "لیست پیشنهادها";
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ExpertUserId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SuggestedPrice)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
                <tr>
                    <td scope="row">
                    @item.Id
                    </td>
                    <td>
                    @item.OrderId
                    </td>
                    <td>
                    @item.ExpertUserId
                    </td>
                    <td>
                    @item.SuggestedPrice
                    </td>
                    <td>
                    @item.IsApproved 
                    </td>
                    <td>
                    @item.CreatedAt
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Bid"  asp-area="Admin" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
        }
    </tbody>
</table>