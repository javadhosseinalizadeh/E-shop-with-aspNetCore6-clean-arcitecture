@model BidUpdateViewModel

@{
    ViewData["Title"] = "ویرایش وضعیت سفارشات";
}



<form method="post"  asp-controller="Bid" asp-action="Update">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">ویرایش وضعیت</h2>
        </div>


        <div class="row">
        <div class="col-8">
            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="Id"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="StatusIds"></label>
                </div>
                <div class="col-8">
                    <select asp-for="StatusIds"  class="select-chosen" asp-items="@ViewBag.statusList">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="StatusIds" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="OrderId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderId" class="form-control" />
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="Id"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ExpertUserId" class="form-control" />
                    <span asp-validation-for="ExpertUserId" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="SuggestedPrice"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SuggestedPrice" class="form-control" />
                    <span asp-validation-for="SuggestedPrice" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="IsApproved"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsApproved" class="form-control" />
                    <span asp-validation-for="IsApproved" class="text-danger"></span>
                </div>

            </div>


            </div>
            <div class="form-group row p-3">
                <div class="col-4">
                    <label asp-for="CreatedAt"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

            </div>


               
                <div class="form-group">
                    <div class="d-inline-flex justify-content-around">
                        <button type="submit" class="btn btn-primary mx-1">ویرایش</button>
                        <div>
                            <a asp-controller="Bid" asp-action="Index" class="btn btn-success">بازگشت</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    <script>

            $(function() {
        $(".select-chosen").chosen({rtl: true});
    });

</script>
}

}