@model List<string>


@{
    Layout = "_PanelSelectLayout";
}
<br />
<br />
<br />
<br />
<div class="row">
    @foreach (var role in Model)
    {
        if (role == "Admin")
        {
            <div class="col-sm-6 col-lg-3">
                <div class="card p-3">
                    <div class="d-flex align-items-center">
                        <span class="stamp stamp-md bg-secondary mr-3">
                            <i class="fas fa-redo"></i>
                        </span>
                        <div>
                            <a class="mr-3" asp-area="Admin" asp-controller="Home" asp-action="Index">پنل مدیریت</a>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        }
        <br />
        if (role == "Customer")
        {
            <div class="col-sm-6 col-lg-3">
                <div class="card p-3">
                    <div class="d-flex align-items-center">
                        <span class="stamp stamp-md bg-secondary mr-3">
                            <i class="fas fa-redo"></i>
                        </span>
                        <div>
                            <a class="mr-3" asp-controller="Home" asp-action="Index">صفحه اول سایت</a>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        }
        <br />
        if (role == "Expert")
        {
            <div class="col-sm-6 col-lg-3">
                <div class="card p-3">
                    <div class="d-flex align-items-center">
                        <span class="stamp stamp-md bg-secondary mr-3">
                            <i class="fas fa-redo"></i>
                        </span>
                        <div>
                            <a class="mr-3" asp-controller="Expert" asp-action="Index">پنل متخصصین</a>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        }
    }

</div>

