@model AppUserDto

<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card mt-8">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-warning shadow-success border-radius-lg py-3 pe-1 text-center py-4">
                        <h4 class="font-weight-bolder text-white mt-1">ویرایش پروفایل</h4>

                    </div>
                </div>
                <div class="card-body">
                    <form role="form" class="text-start" asp-area="" asp-controller="Account" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <input asp-for="Id" style="display:none" class="form-control" />
                        <input asp-for="UserName" style="display:none" class="form-control" />

                        <div style="display:none" class="mb-3">
                            <select asp-for="Roles" class="select-chosen form-select" tabindex="8" multiple style="width:350px;display:none;">
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role" selected>@role</option>
                                }
                            </select>
                        </div>


                        <div class="input-group input-group-static mb-4">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="نام" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>



                        <div class="input-group input-group-static mb-4">
                            <label asp-for="HomeAddress"></label>
                            <textarea asp-for="HomeAddress" rows="2" class="form-control" placeholder="آدرس">

                            </textarea>
                            @*<input asp-for="Address" class="form-control" />*@
                            <span asp-validation-for="HomeAddress"></span>
                        </div>

                        @if (Model.Roles.Count == 2 && Model.Roles.Contains("Expert") || Model.Roles.Contains("EXPERT"))
                        {
                            <div class="input-group input-group-static mb-4">
                                <label for="categories">ویرایش مهارت ها</label>
                                <select name="categories" class="select-chosen form-select " tabindex="8" multiple style="width:350px;" data-placeholder="مهارت ها" asp-items="@ViewBag.Categories">
                                    <option value=""></option>
                                    @foreach (var category in Model.expertCategories)
                                    {
                                        <option value="@category.Id" selected>@category.Title</option>
                                    }
                                </select>
                            </div>
                        }

                        <div class="input-group input-group-static mb-4">
                            <label>پسوورد قدیم</label>
                            <input name="oldPassword" type="password" class="form-control" placeholder="•••••••••••••" />
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label>پسوورد جدید</label>
                            <input name="newPassword" type="password" class="form-control" placeholder="•••••••••••••" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-dark w-100 mt-3 mb-0">ویرایش</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>

    $(function() {
        $(".select-chosen").chosen({rtl: true});
    });


</script>
}