@model RegisterViewModel

<!-- Sign Up End -->
<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card mt-8">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-warning shadow-success border-radius-lg py-3 pe-1 text-center py-4">
                        <h4 class="font-weight-bolder text-white mt-1">Sign In</h4>
                        <p class="mb-1 text-sm text-white">Enter your email and password to Sign In</p>
                    </div>
                </div>
                <div class="card-body">
                    <form role="form" class="text-end" asp-area="" asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary=All class="text-danger"></div>
                        
                        <div class="input-group input-group-static mb-4">
                            <label asp-for="UserName" ></label>
                            <input asp-for="UserName" class="form-control" placeholder="نام کاربری">   
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="Email" ></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل">    
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="•••••••••••••">        
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="•••••••••••••">  
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="نام">       
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="input-group input-group-static mb-4">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی">    
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-dark w-100 mt-3 mb-0">ثبت نام</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                    <p class="mb-4 text-sm mx-auto">
                        اکانت دارید؟
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="text-success text-gradient font-weight-bold">ورود</a>
                    </p>
                    <p class="mb-4 text-sm mx-auto">
                        رمز عبور را فراموش کرده اید؟
                        <a asp-area="" asp-controller="Account" asp-action="ForgetPassword" class="text-success text-gradient font-weight-bold">بازیابی</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>