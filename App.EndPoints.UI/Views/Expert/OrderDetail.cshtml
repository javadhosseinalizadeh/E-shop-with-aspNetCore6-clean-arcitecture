@{
    Layout = "_AdminLayout";
    int userId = ViewBag.UserId;
}
@model OrderDto

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">مشاهده اطلاعات کامل سفارش شماره <span class="badge badge-success mr-2">@Model.Id</span></h4>
